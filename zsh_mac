alias nnnz='nnn -Rde'
alias nnn='nnn -d'
# bookmarks: h takes you to ${HOME}, d takes you to ~/Downloads, see more below
export NNN_BMS='h:~;d:~/Downloads;n:~/notes;p:~/help'
export NNN_COLORS="2136"  # use a different color for each context



